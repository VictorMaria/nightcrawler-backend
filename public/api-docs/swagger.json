{
  "swagger": "2.0",
  "info": {
    "description": "Making company travel and accomodation easy and convinient.",
    "version": "1.0.0",
    "title": "Barefoot Nomad",
    "termsOfService": "http: //swagger.io/terms/",
    "contact": {
      "repository": "nightcrawler12@gmail.com"
    },
    "license": {
      "name": "",
      "url": ""
    }
  },
  "host": "",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Auth",
      "description": "Login Endpoints"
    }
  ],
  "schemes": ["https", "http"
  ],
  "consumes": ["application/json", "application/x-www-form-urlencoded"
  ],
  "produces": ["application/json"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "paths": {
    "/auth/signin": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Sign a user in",
        "description": "Allows registered user to signin",
        "produces": [
          "application/json"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User request object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserLoginReq"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User login successfully",
            "schema": {
              "$ref": "#/definitions/UserLoginRes"
            }
          },
          "400": {
            "description": "Invalid request details",
            "schema": {
              "$ref": "#/definitions/errorDef"
            }
          },
          "403": {
            "description": "Incorrect login details",
            "schema": {
              "$ref": "#/definitions/errorDef"
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "$ref": "#/definitions/errorDef"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserLoginReq": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "password": {
          "type": "string",
          "format": "password",
          "minLength": 8
        }
      }
    },
    "UserLoginRes": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "data": {
          "type": "object",
          "properties": {
            "user_id": {
              "type": "integer",
              "format": "int64"
            },
            "firstName": {
              "type": "string",
              "example": "Korede"
            },
            "lastName": {
              "type": "string",
              "example": "Shonubi"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "password": {
              "type": "string",
              "format": "password"
            },
            "isAdmin": {
              "type": "boolean"
            },
            "token": {
              "type": "string"
            },
            "registeredOn": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      }
    },
    "errorDef": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "error": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}